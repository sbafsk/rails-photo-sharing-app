<p>
  <strong><%= @user %></strong>
  
</p>

<ul>
  <% @user.posts.each do |post| %>
    <p>
      <%= link_to image_tag(post.image.url :preview), post %>
    </p>
    <p>
      <em><%= post.caption %><em> - 
      <b><%= link_to post.user, post.user %></b>
    </p>
  <% end %>
</ul>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', posts_path %>
