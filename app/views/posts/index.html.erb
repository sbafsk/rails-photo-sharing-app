<h1>Posts</h1>

<table>
  <tbody>
    <% @posts.each do |post| %>
      <tr>        
        
        <p><%= link_to image_tag(post.image.url :preview), post %></p>
        <p>
          <em><%= post.caption %><em> - 
          <b><%= link_to post.user, post.user %></b>
        </p>
        <hr>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
