<p>
  <%= link_to image_tag(@post.image.url), @post %>
</p>
<p>
  <em><%= @post.caption %><em> - 
  <b><%= link_to @post.user, @post.user %></b>
</p>

<% if current_user == @post.user %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Delete', @post, 
    method: 'delete', 
    data: { confirm: "Are you sure?" } %>
<% end %>
