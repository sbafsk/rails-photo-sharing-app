<!DOCTYPE html>
<html>
  <head>
    <title>PhotoShare</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'bulma'%>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    

  </head>

  <body>   
    <%
=begin%>
 <nav class="navbar"> 
      <div class="navbar-brand">
        <h2 class="title">PhotoShare</h2>
      </div>
      <div class="navbar-menu"> 
        <% if current_user %>
          <div class="navbar-item">    
            <div><%= current_user %></div>
          </div>
          <div class="navbar-item">      
            <%= link_to 'Log Out', :logout %>
          </div>
        <% else %>
          <div class="navbar-item">      
            <%= link_to 'Log In', :login %>
          </div>
          <div class="navbar-item">      
            <%= link_to 'Sign Up', :signup %>
          </div>
        <% end %>
      </div>
    </nav> 
<%
=end%>
<nav class="navbar" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">        
    <%= link_to '<#= #>', :home, :class => "navbar-item" %>   
    

    <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbar">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="navbar" class="navbar-menu">
     <div class="navbar-end">
     <% if current_user %>
        <a class="navbar-item">
          <div><%= current_user %></div>
        </a>
        <%= link_to 'Log Out', :logout, :class => "navbar-item" %>
      <% else %>
        <%= link_to 'Log In', :login, :class => "navbar-item" %>   
        <%= link_to 'Sign Up', :signup, :class => "navbar-item" %>
      <% end %>      
      
<%
=begin%>
 <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-link">
          More
        </a>

        <div class="navbar-dropdown">
          <a class="navbar-item">
            About
          </a>
          <a class="navbar-item">
            Jobs
          </a>
          <a class="navbar-item">
            Contact
          </a>
          <hr class="navbar-divider">
          <a class="navbar-item">
            Report an issue
          </a>
        </div> 
<%
=end%>
      </div>
    </div>    
  </div>
</nav>

    <p id="notice"><%= notice %></p>    
    <p id="alert"><%= alert %></p> 
    <%= yield %>
  </body>
</html>
